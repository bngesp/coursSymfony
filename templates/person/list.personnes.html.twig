{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}

{% block body %}
    <table class="table table-striped table-hover">
        <thead>
        <tr>
            <th scope="col">id</th>
            <th scope="col">Prenom</th>
            <th scope="col">Nom</th>
            <th scope="col">Age</th>
            <th scope="col">Sexe</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
            {% for p in person %}
            <tr>
                <th scope="row">{{ p.id }}</th>
                <td>{{ p.prenom }}</td>
                <td>{{ p.nom }}</td>
                <td>{{ p.age }}</td>
                <td>{{ p.sexe }}</td>
                <td>{{ p.sexe }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="row pull-right">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link">Previous</a>
                </li>
                {% for i in 1..pages %}
                    <li class="page-item">
                        <a class="page-link" href="{{ path('app_get_person', {page: i}) }}">{{ i }}</a>
                    </li>
                {% endfor %}
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            </ul>
        </nav>
    </div>
{% endblock%}
